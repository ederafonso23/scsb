@model WebAppLab2Turma20161.Models.Categoria

@{
    ViewBag.Title = @Model.Nome;
}


<br/>
<br/>

<div class="row">
    <div class="col-xs-12 col-md-3">
        <ul class="nav nav-pills nav-stacked">


            @if(Model.Nome== "Cabelo")
            {
                <li class="active">
                    <a href="~/StoreFront/Index/1">Cabelo</a>
                </li>
            }
            else
            {
                <li>
                     <a href="~/StoreFront/Index/1">Cabelo</a>
                </li>
            }
            @if (Model.Nome == "Maquiagem")
            {
                <li class="active">
                    <a href="~/StoreFront/Index/2">Maquiagem</a>
                </li>
            }
            else
            {
                <li>
                    <a href="~/StoreFront/Index/2">Maquiagem</a>
                </li>
            }
            @if (Model.Nome == "Depilação")
            {
                <li class="active">
                    <a href="~/StoreFront/Index/3">Depilação</a>
                </li>
            }
            else
            {
                <li>
                    <a href="~/StoreFront/Index/3">Depilação</a>
                </li>
            }
            @if (Model.Nome == "Pele")
            {
                <li class="active">
                    <a href="~/StoreFront/Index/4">Pele</a>
                </li>
            }
            else
            {
                <li>
                    <a href="~/StoreFront/Index/4">Pele</a>
                </li>
            }
            
        </ul>
    </div>
    <div class="col-xs-12 col-md-9">
        <div class="row">
            @foreach (var produto in Model.Produtos)
            {
                <div class="col-xs-12 col-md-3">
                    <div class="thumbnail">
                        <img class="img-responsive" src="~/Content/Images/Products/@(produto.ProdutoId).png">
                        <div class="caption text-center">
                            <p>
                                <b>Nome:</b> <span>@produto.Nome</span>
                            </p>
                            <p>
                                <b>Preço:</b> <span>R$ @produto.Preco</span>
                            </p>
                            <p class="text-center">
                                @Html.ActionLink("Adicionar no Carrinho", "AddToCart", "ShoppingCart", new { id = produto.ProdutoId }, new {@class="btn btn-info"})
                            </p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
