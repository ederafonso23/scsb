@model WebAppLab2Turma20161.Models.Categoria

@{
    ViewBag.Title = "Categoria - Cadastro";
    Layout = "~/Views/Shared/_LayoutPageInterno.cshtml";
}

<div class="modal-dialog">
    <div class="modal-content">

        @using (Html.BeginForm())
        {

            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title">Cadastro de Categoria</h4>
            </div>


            @Html.AntiForgeryToken()

            <div class="modal-body">

                <div class="form-horizontal">
                 
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(model => model.Nome,"Descrição", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
                        </div>
                    </div>

                </div>
            </div>

            <div class="modal-footer">
                <input type="submit" value="Cadastrar" class="btn btn-primary" />
                <input type="button" value="Cancelar" class="btn btn-default" data-dismiss="modal" />
            </div>


        }


        @section Scripts {

            @Scripts.Render("~/bundles/jquerymask")
            @Scripts.Render("~/bundles/jqueryval")

           <script>
            $(function () {
                $("#datepicker").datepicker({
                    showButtonPanel: true
                });
            });
            $.datepicker.setDefaults($.datepicker.regional["pt-BR"]);

            </script>

        }
        </div>
</div>